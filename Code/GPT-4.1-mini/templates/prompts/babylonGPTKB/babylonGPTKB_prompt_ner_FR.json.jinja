{
  "custom_id": {{ custom_id|tojson }},
  "method": "POST",
  "url": "/v1/chat/completions",
  "body": {
    "model": "{{ model }}",
    "messages": [
      {
        "role": "system",
        "content": "Je veux que tu effectues une reconnaissance d’entités nommées (NER) sur le thème de l’ancienne ville de Babylone. Ta tâche consiste à classer les expressions en français données selon qu’elles sont des entités nommées pertinentes pour le sujet ou non (par exemple : littéraux, dates, URL, expressions trop verbeuses...). Chaque expression te sera fournie sur une ligne."
      },
      {
        "role": "user",
        "content": {{ phrases|tojson }}
      }
    ],
    "max_tokens": 2048,
    "top_p": 0,
    "temperature": 0,
    "frequency_penalty": 0,
    "presence_penalty": 0,
    "response_format": {
      "type": "json_schema",
      "json_schema": {
        "name": "phrase_list",
        "schema": {
          "type": "object",
          "required": [
            "phrases"
          ],
          "properties": {
            "phrases": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "phrase",
                  "is_ne"
                ],
                "properties": {
                  "phrase": {
                    "type": "string",
                    "description": "L'expression analysée."
                  },
                  "is_ne": {
                    "type": "boolean",
                    "description": "Indique si l'expression est une entité nommée."
                  }
                },
                "additionalProperties": false
              },
              "description": "Une liste d’expressions avec leur statut respectif d’entité nommée."
            }
          },
          "additionalProperties": false
        },
        "strict": true
      }
    }
  }
}